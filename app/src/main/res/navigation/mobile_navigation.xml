<?xml version="1.0" encoding="utf-8"?>
<!--suppress NavigationFile -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <action
        android:id="@+id/log_out_to_nav_login"
        app:destination="@id/nav_login"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true"/>

    <fragment
        android:id="@+id/nav_login"
        android:name="uniovi.eii.shareit.view.identification.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login" >
        <argument
            android:name="ShowAppBar"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_login_to_nav_signup"
            app:destination="@id/nav_signup" />
    </fragment>

    <fragment
        android:id="@+id/nav_signup"
        android:name="uniovi.eii.shareit.view.identification.SignUpFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_signup" >
        <argument
            android:name="ShowAppBar"
            android:defaultValue="false"
            app:argType="boolean" />
        <action
            android:id="@+id/action_nav_signup_to_nav_login"
            app:destination="@id/nav_login"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="uniovi.eii.shareit.view.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_album_image"
            app:destination="@id/nav_album_image" />
        <action
            android:id="@+id/action_nav_home_to_nav_album"
            app:destination="@id/nav_album" />
        <action
            android:id="@+id/action_nav_home_to_nav_album_creation"
            app:destination="@id/navigation_album_creation" />
        <action
            android:id="@+id/action_nav_home_to_nav_album_information"
            app:destination="@id/nav_album_information" />
    </fragment>

    <fragment
        android:id="@+id/nav_album"
        android:name="uniovi.eii.shareit.view.album.AlbumFragment"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_nav_album_to_nav_album_information"
            app:destination="@id/nav_album_information" />
        <action
            android:id="@+id/action_nav_album_to_nav_album_image"
            app:destination="@id/nav_album_image" />
        <action
            android:id="@+id/action_nav_album_to_nav_album_chat"
            app:destination="@id/nav_album_chat" />
        <argument
            android:name="COLUMN_COUNT"
            app:argType="integer"
            android:defaultValue="4" />
        <argument
            android:name="albumID"
            app:argType="string" />
        <argument
            android:name="albumName"
            app:argType="string" />
        <argument
            android:name="albumCoverImage"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_album_information"
        android:name="uniovi.eii.shareit.view.album.information.AlbumInformationFragment"
        android:label="@string/menu_album_information"
        tools:layout="@layout/fragment_album_information" >
        <argument
            android:name="albumID"
            app:argType="string" />
        <argument
            android:name="albumName"
            app:argType="string" />
        <argument
            android:name="albumCoverImage"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_album_image"
        android:name="uniovi.eii.shareit.view.album.image.ImageFragment"
        android:label="@string/menu_album_image"
        tools:layout="@layout/fragment_album_image" >
        <argument
            android:name="USE_VIEWMODEL"
            app:argType="string" />
        <argument
            android:name="SELECTED_IMAGE"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>

    <fragment
        android:id="@+id/nav_album_chat"
        android:name="uniovi.eii.shareit.view.album.chat.ChatFragment"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/nav_account"
        android:name="uniovi.eii.shareit.view.profile.ProfileFragment"
        android:label="@string/menu_account"
        tools:layout="@layout/fragment_profile" />

    <navigation
        android:id="@+id/navigation_album_creation"
        app:startDestination="@id/nav_album_creation">
        <fragment
            android:id="@+id/nav_album_creation"
            android:name="uniovi.eii.shareit.view.album.creation.AlbumCreationFragment"
            android:label="@string/menu_album_creation"
            tools:layout="@layout/fragment_album_creation">
            <action
                android:id="@+id/action_nav_album_creation_to_nav_album_creation_shared"
                app:destination="@id/nav_album_creation_shared" />
            <action
                android:id="@+id/action_nav_album_creation_to_nav_home"
                app:destination="@id/nav_home"
                app:popUpTo="@id/nav_home"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/nav_album_creation_shared"
            android:name="uniovi.eii.shareit.view.album.creation.AlbumCreationSharedFragment"
            android:label="@string/menu_album_creation"
            tools:layout="@layout/fragment_album_creation_shared">
            <action
                android:id="@+id/action_nav_album_creation_shared_to_nav_home"
                app:destination="@id/nav_home"
                app:popUpTo="@id/nav_home"
                app:popUpToInclusive="true" />
        </fragment>

    </navigation>

</navigation>