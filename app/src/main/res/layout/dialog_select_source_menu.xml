<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/option_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/select_source_camera"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableLeftCompat="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/option_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/select_source_gallery"
        android:textAppearance="?attr/textAppearanceBody1"
        app:drawableLeftCompat="@drawable/ic_menu_gallery" />

</LinearLayout>
