<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.album.information.display.AlbumInformationSharedFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/labelSharedAlbum"
                    style="?attr/textAppearanceTitleMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:labelFor="@+id/switchSharedAlbum"
                    android:text="@string/switch_shared_album" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchSharedAlbum"
                    style="?attr/materialSwitchStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sharedSettings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/divider_margin" />

                <TextView
                    android:id="@+id/labelPermissionSettings"
                    style="?attr/textAppearanceTitleLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_permission_settings" />

                <TextView
                    android:id="@+id/labelPermissionMembers"
                    style="?attr/textAppearanceTitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:text="@string/label_permission_members" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/membersImagesPermissionLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/label_permission_images"
                    android:labelFor="@id/membersImagesPermissionEditText">

                    <AutoCompleteTextView
                        android:id="@+id/membersImagesPermissionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        app:simpleItems="@array/ImagesPermission" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/membersChatPermissionLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/label_permission_chat"
                    android:labelFor="@id/membersChatPermissionEditText">

                    <AutoCompleteTextView
                        android:id="@+id/membersChatPermissionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        app:simpleItems="@array/ChatPermission" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/labelPermissionGuests"
                    style="?attr/textAppearanceTitleMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_margin"
                    android:text="@string/label_permission_guests" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/guestsImagesPermissionLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/label_permission_images"
                    android:labelFor="@id/guestsImagesPermissionEditText">

                    <AutoCompleteTextView
                        android:id="@+id/guestsImagesPermissionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        app:simpleItems="@array/ImagesPermission" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/guestsChatPermissionLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="@string/label_permission_chat"
                    android:labelFor="@id/guestsChatPermissionEditText">

                    <AutoCompleteTextView
                        android:id="@+id/guestsChatPermissionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:importantForAccessibility="no"
                        android:inputType="none"
                        app:simpleItems="@array/ChatPermission" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/divider_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelInvitationLink"
                        style="?attr/textAppearanceTitleMedium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:labelFor="@+id/switchInvitationLink"
                        android:text="@string/switch_invitation_link" />

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switchInvitationLink"
                        style="?attr/materialSwitchStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/invitationLinkLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconDrawable="@drawable/ic_copy_24"
                    app:endIconMode="custom"
                    app:helperText="@string/read_only"
                    app:helperTextEnabled="true">

                    <!--Para hacerlo Read-Only son necesarias las propiedades:
                        android:inputType="none"
                        android:textIsSelectable="true"
                        android:focusable="false"
                        android:longClickable="false"-->
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/invitationLinkEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="none"
                        android:longClickable="false"
                        android:text="@string/not_enabled"
                        android:textIsSelectable="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:contentDescription="@string/fab_edit_desc"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_edit_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:contentDescription="@string/fab_save_desc"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_save_24" />

</androidx.constraintlayout.widget.ConstraintLayout>